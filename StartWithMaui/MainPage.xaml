<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StartWithMaui.MainPage" >

    <VerticalStackLayout>
        <Button x:Name="up" Margin="15" CornerRadius="90" HeightRequest="45" WidthRequest="45" Clicked="Button_Clicked">
            <Button.ImageSource>
                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe5d8;"></FontImageSource>
           </Button.ImageSource>
        </Button>
        <Image  x:Name="img" Source="" Margin="10" HeightRequest="400" Aspect="Center" IsAnimationPlaying="True"></Image>
        <Button x:Name="down" Margin="15" CornerRadius="90" HeightRequest="45" WidthRequest="45" Clicked="Button_Clicked">
            <Button.ImageSource>
                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe5db;"></FontImageSource>
            </Button.ImageSource>
        </Button>
    </VerticalStackLayout>



</ContentPage>
